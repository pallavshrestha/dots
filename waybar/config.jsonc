        "transition-duration": 500,
        "children-class": "",
        "transition-left-to-right": true
        },
    	"modules": [
            "network",
            "custom/network"
    	]
    },
    "group/hardware": {
		"orientation": "inherit",
        "drawer": {
        "transition-duration": 500,
        "children-class": "",
        "transition-left-to-right": false
        },
		"modules": [
            "cpu",
            "memory"
		]
