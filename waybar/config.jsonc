        "icon-theme": "Qogir-Dark",
        "tooltip-format": "{title} | {app_id}",
        "on-click": "activate",
        "on-click-right": "minimize",
        "active-first": true,
        "on-click-middle": "close",
        "ignore-list": [
            "Alacritty",
            "foot"
